<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TravelActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bruiens"
    />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pragser Wildsee"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:fontFamily="@font/poppins"
                android:text="Lake in Italy"
                android:textSize="18sp"
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="85dp"
                android:src="@drawable/baseline_star_24"
                android:layout_marginStart="80dp"
            />

            <TextView
                android:layout_width="30dp"
                android:layout_height="85dp"
                android:textSize="21sp"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                android:text="4.7"
            />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="0dp">

            <ImageButton
                android:id="@+id/ibcall"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/baseline_call_24"
                android:layout_gravity="center"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="CALL"
                android:textColor="#2483BB"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dp">

            <ImageButton
                android:id="@+id/ibnavigate"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/baseline_navigation_24"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="ROUTE"
                android:textColor="#2483BB"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dp">

            <ImageButton
                android:id="@+id/ibshare"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/shareee"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="SHARE"
                android:textColor="#2483BB"
                />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="23dp"
        android:text="@string/lorem"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:justificationMode="inter_word"
    />

</LinearLayout>