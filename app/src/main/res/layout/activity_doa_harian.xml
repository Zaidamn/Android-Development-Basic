<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoaHarianActivity">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/rlHeaderDoa"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/circle_test">

        <ImageButton
            android:id="@+id/ibKembaliKeDashboardDoa"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/arrow_back"
            android:layout_margin="20dp"
            />

        <TextView
            android:id="@+id/tvJudul"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:fontFamily="@font/alata"
            android:layout_marginStart="30dp"
            android:text="@string/doa_harian"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:maxLines="2"
            />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/doa_logo"
            android:layout_toRightOf="@id/tvJudul"
            android:layout_marginTop="40dp"
            />

    </RelativeLayout>
    <!-- End of Relative Layout Header -->
    <!-- Beginning of Scrollview and Recyclerview -->

    <ScrollView
        android:layout_below="@id/rlHeaderDoa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:scrollbars="none">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDoaHarian"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </ScrollView>

    </RelativeLayout>
